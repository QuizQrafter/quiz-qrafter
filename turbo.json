{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "//#format-and-lint": {},
        "//#format-and-lint:fix": {
            "cache": false
        },
        "start": {},
        "build": {
            "outputs": [
                "dist/**"
            ],
            "dependsOn": [
                "check-types"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
